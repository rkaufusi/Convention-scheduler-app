<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/cards"
        android:padding="8dp">

        <TextView
            android:id="@+id/text_view_subject_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="Subject"
            android:textStyle="bold"
            android:textColor="#6e45e2"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

        <TextView
            android:id="@+id/text_view_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/text_view_end"
            android:padding="8dp"
            android:textStyle="bold"
            android:textColor="#4facfe"
            android:text="01-01-2020"
            android:textAppearance="@style/TextAppearance.AppCompat.Small" />

        <TextView
            android:id="@+id/text_view_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:padding="8dp"
            android:textStyle="bold"
            android:textColor="#4facfe"
            android:text="06-06-2020"
            android:textAppearance="@style/TextAppearance.AppCompat.Small" />


    </RelativeLayout>


</androidx.cardview.widget.CardView>