<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/cards"
        android:padding="8dp">

        <TextView
            android:id="@+id/text_view_workshop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Workshop"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:maxLines="1"
            android:layout_toStartOf="@+id/text_view_workshop_date"
            android:layout_alignParentStart="true"
            android:textStyle="bold"
            android:textColor="#6e45e2"
            android:ellipsize="end"/>
        
        <TextView
            android:id="@+id/text_view_workshop_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/text_view_end_date"
            android:text="Start Date "
            android:padding="8dp"
            android:textStyle="bold"
            android:textColor="#4facfe"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"/>

        <TextView
            android:id="@+id/text_view_end_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="End Date"
            android:textStyle="bold"
            android:padding="8dp"
            android:textColor="#4facfe"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"/>


        
    </RelativeLayout>

</androidx.cardview.widget.CardView>